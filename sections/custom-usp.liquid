{% style %}
    @media screen and (min-width:750px){
        .padding--{{section.id}}{
            padding-top: {{section.settings.padding_top |   divided_by: 2 |  round:0}}px;
            padding-bottom: {{section.settings.padding_bottom | divided_by: 2 |  round:0}}px;
        }
    }

     .padding--{{section.id}}{
            padding-top: {{section.settings.padding_top}}px;
            padding-bottom: {{section.settings.padding_bottom}}px;
        }
        .custom-usp{
          background-color: {{section.settings.background_color}};

        }

         .custom-usp__wrapper{
      padding:20px 0px;
    }

    .custom-usp .grid__item>*{
      margin:0;
      padding:0;
    }
  .custom-usp .grid__item p{
    font-size: calc(var(--font-body-scale) * 14px);
    line-height:normal;
    color: rgba(var(--color-foreground),.6);
  }
{% endstyle %}

<div class="custom-usp padding--{{section.id}} {% unless section.settings.page_width %} page-width {% endunless %}">
  <div class="page-width">
    <div class="custom-usp__wrapper">
      <div class="grid grid--2-col grid--4-col-desktop">
        {% for block in section.blocks %}
          <div class="grid__item center">
            {% if block.settings.usp_svg %}
              {{ block.settings.usp_svg }}
            {% else %}
              {{ 'product-1' | placeholder_svg_tag }}
            {% endif %}
            <div class="h2 icon-heading">{{ block.settings.heading }}</div>
            <div class="h4 icon-description">{{ block.settings.description }}</div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom usp",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "label": "Background color",
      "id": "background_color",
      "default": "#ccc"
    },
    {
      "type": "checkbox",
      "label": "Make section full width",
      "id": "page_width",
      "default": false
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "unit": "px",
      "default": 0,
      "step": 1
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 100,
      "unit": "px",
      "default": 0,
      "step": 1
    }
  ],
  "blocks": [
    {
      "name": "Usp block",
      "type": "content",
      "settings": [
        {
          "type": "html",
          "id": "usp_svg",
          "label": "Usp svg"
        },
        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "heading",
          "default": "Heading"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>Talk about you company</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom usp"
    }
  ]
}
{% endschema %}
