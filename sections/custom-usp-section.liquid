{% style %}
  @media screen and (min-width:750px){
      .padding--{{section.id}}{
          padding-top: {{section.settings.padding_top |   divided_by: 2 |  round:0}};
          padding-bottom: {{section.settings.padding_bottom | divided_by: 2 |  round:0}};
      }
  }

   .padding--{{section.id}}{
          padding-top: {{section.settings.padding_top}};
          padding-bottom: {{section.settings.padding_bottom}};
      }
      .custom-usp{
        background-color: {{section.settings.background_color}};
      }
{% endstyle %}

<div class="padding--{{section.id}} {% unless section.settings.page_width %} page-width {% endunless %}">
  <div class="custom-usp page-width">
    <div class="grid grid--2-col grid--4-col-desktop">
      {% for block in section.blocks %}
        <div class="grid__item">
          {% if block.settings.usp_svg %}
            {{ block.settings.usp_svg }}
          {% else %}
            {{ 'product-1' | placeholder_svg_tag }}
          {% endif %}
          <div class="h2">{{ block.settings.heading }}</div>
          <div class="h4">{{ block.settings.description }}</div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom usp",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "label": "Background color",
      "id": "background_color",
      "default": "#ccc"
    },
    {
      "type": "checkbox",
      "label": "Make section full width",
      "id": "page_width",
      "default": true
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "unit": "px",
      "default": 0,
      "step": 1
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 100,
      "unit": "px",
      "default": 0,
      "step": 1
    }
  ],
  "blocks": [
    {
      "name": "Icon container",
      "type": "content",
      "settings": [
        {
          "type": "html",
          "id": "usp_svg",
          "label": "Usp svg"
        },
        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "heading",
          "default": "Heading"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>Talk about you company</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom usp"
    }
  ]
}
{% endschema %}
