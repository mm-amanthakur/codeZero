{{ 'custom-blog.css' | asset_url | stylesheet_tag }}


{% liquid
  assign paddingTop = section.settings.padding_top
  assign paddingBottom = section.settings.padding_bottom
  assign heading = section.settings.heading
  assign headingSize = section.settings.heading_size
  assign sliderType = section.settings.slider_type
  assign pagination =section.settings.pagination
  assign perPage = section.settings.perPage
  assign autoplay = section.settings.autoplay
  assign arrows = section.settings.arrows
  assign blocks = section.blocks
  assign colorScheme = section.settings.color_scheme
%}

{% style %}
  @media screen and (min-width: 750px) {
    .padding--{{ section.id }} {
      padding-top: {{ paddingTop }}px;
      padding-bottom: {{ paddingBottom }}px;
    }
  }
  .padding--{{ section.id }} {
    padding-top: {{ paddingTop | divided_by:2 }}px;
    padding-bottom: {{ paddingBottom |  divided_by: 2 }}px;
  }
{% endstyle %}


<div class="custom-blog padding--{{section.id}} color--{{colorScheme.id}}">
  <div class="page-width">
    {% if heading != blank %}
      <div class="{{headingSize}} title-wrapper">{{ heading }}</div>
    {% endif %}
    <Custom-Splide>
      <div class="splide custom-blog-slide-container">
        <div div class="splide__track">
          <ul class="splide__list">
            {% for block in blocks %}
              {% for article in block.settings.blog.articles %}
                <li class="splide__slide">
                  <div class="slide-container">
                    <div class="custom-blog--image-wrapper">
                      {% if article.image != blank %}
                        {% render 'responsive-picture'
                          , desktopImage: article.image
                          , mobileImage: article.image
                          , class: "media media--square"
                        %}
                      {% else %}
                        {{ 'image' | placeholder_svg_tag }}
                      {% endif %}
                    </div>
                    <div class="custom-text-content">
                      <div class="text-upper">
                        <div class="custom-blog__tags">
                          {% for tag in article.tags %}
                            <a href="{{block.settings.blog.url |  append: '/tagged/' |  append: tag }}">{{ tag }}</a>
                          {% endfor %}
                        </div>
                        <div class="custom-blog__title">
                          <a class="h3" href="{{article.url}}">{{ article.title }}</a>
                        </div>
                        <div class="custom-blog__author">
                          Publish by: {{ article.author }}
                        </div>
                        <div class="custom-blog__excerpt">
                          {{ article.excerpt_or_content | truncatewords: 15 }}
                        </div>
                      </div>
                      <div class="custom-blog__published-date">
                        <div class="custom-blog__read-more">
                          <a href="{{article.url}}">Read more</a>
                        </div>
                        <div class="published-date">
                          {{ article.published_at | date: '%B %d, %Y' }}
                        </div>
                      </div>
                    </div>
                  </div>
                </li>
              {% endfor %}
            {% endfor %}
          </ul>
        </div>
      </div>
      <script id="splideProperties">
        {
          "autoplay": {{ autoplay }},
          "perPage": {{perPage}},
          "arrows": {{ arrows }},
           "gap": "{{ section.settings.gap |  append: 'rem'}}",
           "rewind": {{ section.settings.rewind }},
           "pagination": {{pagination}},
           "breakpoints":{
            "640": {
        			"perPage": 1,
                    "destroy":true
              }
              },
              "type": "{{sliderType}}"
          }
      </script>
    </Custom-Splide>
  </div>
</div>


{% schema %}
  {
    "name": "Custom blog",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "header",
        "content": "Custom blog"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Let You Know"
      },
      {
        "type": "select",
        "id": "heading_size",
        "options": [
          {
            "value": "h0",
            "label": "Large"
          }, {
            "value": "h1",
            "label": "Medium"
          }, {
            "value": "h2",
            "label": "Small"
          }
        ],
        "default": "h1",
        "label": "Heading Size"
      },
      {
        "type": "header",
        "content": "Slider Settings"
      }, {
        "type": "select",
        "id": "slider_type",
        "label": "Animation type",
        "options": [
          {
            "value": "loop",
            "label": "Loop"
          }, {
            "value": "slide",
            "label": "Slide"
          }, {
            "value": "fade",
            "label": "Fade"
          }
        ],
        "default": "loop"
      }, {
        "type": "range",
        "id": "perPage",
        "min": 1,
        "max": 15,
        "step": 1,
        "label": "Per Page",
        "default": 1
      }, {
        "type": "range",
        "id": "speed",
        "min": 1,
        "max": 10,
        "step": 1,
        "label": "Speed of slide",
        "default": 1
      }, {
        "type": "range",
        "id": "interval",
        "min": 1,
        "max": 10,
        "step": 1,
        "label": "Slider timing",
        "default": 1
      }, {
        "type": "range",
        "id": "gap",
        "min": 1,
        "max": 4,
        "step": 1,
        "label": "Gap between slides in rem",
        "default": 2
      }, {
        "type": "checkbox",
        "id": "autoplay",
        "label": "Enable Autoplay",
        "default": true
      }, {
        "type": "checkbox",
        "id": "arrows",
        "label": "Enable Arrows",
        "default": true
      }, {
        "type": "checkbox",
        "id": "pagination",
        "label": "Show Dots",
        "default": true
      }, {
        "type": "checkbox",
        "id": "rewind",
        "label": "Rewind Slider",
        "default": true
      }, {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": " Color Schema",
        "info": "applies color schema to whole section",
        "default": "scheme-1"
      }, {
        "type": "header",
        "content": "Section padding"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding top",
        "default": 60
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding bottom",
        "default": 60
      }
    ],
    "blocks": [
      {
        "name": "Blog",
        "type": "blog",
        "settings": [
          {
            "type": "blog",
            "id": "blog",
            "label": "Blogs"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Custom blog"
      }
    ]
  }
{% endschema %}